<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="gridPane" prefHeight="328.0" prefWidth="375.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.saxion.re.solarsmart.SolarSmartController">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="209.0" minWidth="200.0" prefWidth="163.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="266.0" minWidth="166.0" prefWidth="212.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10" vgrow="SOMETIMES" />
    </rowConstraints>

    <Label text="First Name: " GridPane.columnIndex="0" GridPane.rowIndex="0">
      <GridPane.margin>
         <Insets left="10.0" />
      </GridPane.margin></Label>
    <TextField fx:id="firstName" maxHeight="30.0" maxWidth="60.0" onAction="#confirm">
      <GridPane.margin>
         <Insets left="80.0" />
      </GridPane.margin>
      <padding>
         <Insets right="50.0" />
      </padding></TextField>

    <Label text="Last Name: " GridPane.columnIndex="0" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets left="10.0" />
      </GridPane.margin></Label>
    <TextField fx:id="lastName" maxHeight="30.0" maxWidth="60.0" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets left="80.0" />
      </GridPane.margin></TextField>

    <Label text="Roof Width:" GridPane.columnIndex="0" GridPane.rowIndex="2">
      <GridPane.margin>
         <Insets left="10.0" />
      </GridPane.margin></Label>
    <TextField fx:id="roofW" maxHeight="30.0" maxWidth="60.0" GridPane.rowIndex="2">
      <GridPane.margin>
         <Insets left="80.0" />
      </GridPane.margin>
      <padding>
         <Insets right="50.0" />
      </padding></TextField>

    <Label text="Roof Height: " GridPane.columnIndex="0" GridPane.rowIndex="3">
      <GridPane.margin>
         <Insets left="10.0" />
      </GridPane.margin></Label>
    <TextField fx:id="roofH" maxHeight="30.0" maxWidth="60.0" prefHeight="0.0" prefWidth="0.0" GridPane.rowIndex="3">
      <GridPane.margin>
         <Insets left="80.0" />
      </GridPane.margin>
      <padding>
         <Insets right="50.0" />
      </padding></TextField>

    <Label alignment="TOP_CENTER" text="Annual power consumption: " textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="4">
      <GridPane.margin>
         <Insets left="10.0" />
      </GridPane.margin></Label>
    <TextField fx:id="powerConsumptionField" maxHeight="30.0" maxWidth="60.0" prefHeight="0.0" prefWidth="0.0" GridPane.rowIndex="4">
      <GridPane.margin>
         <Insets left="170.0" />
      </GridPane.margin>
      <padding>
         <Insets right="50.0" />
      </padding></TextField>

</GridPane>
